{
    "build": {
        "dockerfile": "./Dockerfile",
        "context": "."
    },
    "features": {
        "devcontainers/features/common@v0.0.2": {
            "install_Zsh": "true",
            "username": "vscode",
            "user_uid": "1000",
            "user_gid": "1000",
            "upgrade_packages": "true"
        },
        "devcontainers/features/node@v0.0.2": "none"
    },
    "overrideFeatureInstallOrder": [
        "devcontainers/features/common@v0.0.2"
    ],
    // Use 'forwardPorts' to make a list of ports inside the container available locally.
    "forwardPorts": [
        8080
    ],
    "remoteUser": "vscode",
    "postCreateCommand": "sudo usermod -aG www-data vscode && sudo sed -i -e 's/Listen 80/Listen 80\\nListen 8080/g' /etc/apache2/ports.conf"
}
{
    "build": {
        "dockerfile": "./Dockerfile",
        "context": "."
    },
    "features": [
        {
            "id": "devcontainers/features/common@v0.0.2",
            "options": {
                "install_Zsh": "true",
                "username": "vscode",
                "user_uid": "1000",
                "user_gid": "1000",
                "upgrade_packages": "true"
            }
        },
        {
            "id": "devcontainers/features/node@v0.0.2",
            "options": {
                "version": "none"
            }
        }
    ],
    // Use 'forwardPorts' to make a list of ports inside the container available locally.
    "forwardPorts": [
        8080
    ],
    "remoteUser": "vscode",
    "postCreateCommand": "sudo usermod -aG www-data vscode && sudo sed -i -e 's/Listen 80/Listen 80\\nListen 8080/g' /etc/apache2/ports.conf"
}
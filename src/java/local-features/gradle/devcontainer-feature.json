{
    "id": "gradle",
    "name": "Gradle (via SDKMAN!)",
    "options": {
        "version": {
            "type": "string",
            "proposals": [
                "latest",
                "none",
                "7",
                "6",
                "5"
            ],
            "default": "latest",
            "description": "Select or enter a Gradle version to install"
        }
    },
    "containerEnv": {
        "SDKMAN_DIR": "${SDKMAN_DIR:-\"/usr/local/sdkman\"}",
        "PATH": "${SDKMAN_DIR}/bin:${SDKMAN_DIR}/candidates/gradle/current/bin:${PATH}"
    },
    "install": {
        "app": "",
        "file": "install.sh"
    }
}